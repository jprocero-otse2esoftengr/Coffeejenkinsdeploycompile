<?xml version="1.0" encoding="UTF-8"?>
<coffeeValidationTest>
   <testName>CoffeeDataValidation</testName>
   <description>Test that coffee data validation works correctly</description>
   <testCases>
      <testCase>
         <id>1</id>
         <name>Espresso</name>
         <description>Strong Italian coffee</description>
         <price>350</price>
         <category>Espresso</category>
         <available>true</available>
         <expectedResult>VALID</expectedResult>
      </testCase>
      <testCase>
         <id>2</id>
         <name></name>
         <description>Missing name should fail validation</description>
         <price>250</price>
         <category>Filter</category>
         <available>true</available>
         <expectedResult>INVALID</expectedResult>
      </testCase>
      <testCase>
         <id>3</id>
         <name>Latte</name>
         <description>Creamy coffee with milk</description>
         <price>-50</price>
         <category>Milk Coffee</category>
         <available>true</available>
         <expectedResult>INVALID</expectedResult>
      </testCase>
   </testCases>
</coffeeValidationTest>
