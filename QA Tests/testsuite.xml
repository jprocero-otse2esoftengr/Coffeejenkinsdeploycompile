<?xml version="1.0" encoding="UTF-8"?>
<testcases name="QA Tests">
   <property name="source.folder" value="${project.folder}/regressiontest/source"/>
   <property name="reference.folder" value="${project.folder}/regressiontest/reference"/>
   <property name="output.folder" value="${project.folder}/regressiontest/.$output"/>
   <options type="TestcaseCompare">
      <ignore element="startTime"/>
      <ignore element="stopTime"/>
      <ignore attribute="trace:Size"/>
   </options>
   <options type="TabfileMergeCompare">
      <ignore element="BuildTime"/>
   </options>
   
   <!-- Test coffee service data validation -->
   <testcase name="CoffeeDataValidation" classname="QATest">
      <description>Test that coffee data validation works correctly</description>
      <input>
         <file>${source.folder}/coffee_validation_input.xml</file>
      </input>
      <expected>
         <file>${reference.folder}/coffee_validation_expected.xml</file>
      </expected>
   </testcase>
   
   <!-- Test coffee service business logic -->
   <testcase name="CoffeeBusinessLogic" classname="QATest">
      <description>Test coffee service business logic and calculations</description>
      <input>
         <file>${source.folder}/coffee_business_logic_input.xml</file>
      </input>
      <expected>
         <file>${reference.folder}/coffee_business_logic_expected.xml</file>
      </expected>
   </testcase>
   
   <!-- Test error handling -->
   <testcase name="ErrorHandling" classname="QATest">
      <description>Test error handling for invalid inputs</description>
      <input>
         <file>${source.folder}/error_handling_input.xml</file>
      </input>
      <expected>
         <file>${reference.folder}/error_handling_expected.xml</file>
      </expected>
   </testcase>
   
   <!-- Test performance -->
   <testcase name="PerformanceTest" classname="QATest">
      <description>Test service performance under load</description>
      <input>
         <file>${source.folder}/performance_input.xml</file>
      </input>
      <expected>
         <file>${reference.folder}/performance_expected.xml</file>
      </expected>
   </testcase>
</testcases>
